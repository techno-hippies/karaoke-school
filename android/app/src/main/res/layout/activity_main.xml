<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a2e"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lit Protocol Test"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Testing Passkeys + PKP on Naga Dev"
            android:textColor="#888888"
            android:textSize="14sp"
            android:layout_marginBottom="32dp" />

        <!-- Step 1: Passkey Auth -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 1: Passkey Authentication"
            android:textColor="#BB86FC"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnRegisterPasskey"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Register New Passkey + Mint PKP"
            android:textAllCaps="false"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnAuthenticatePasskey"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Authenticate with Existing Passkey"
            android:textAllCaps="false"
            android:backgroundTint="#03DAC5"
            android:layout_marginBottom="24dp" />

        <!-- Step 2: PKP Info -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 2: PKP Status"
            android:textColor="#BB86FC"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#2d2d44"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PKP Address"
                    android:textColor="#888888"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvPkpAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Not authenticated"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auth Method ID"
                    android:textColor="#888888"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvAuthMethodId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Token ID"
                    android:textColor="#888888"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvTokenId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:fontFamily="monospace" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Step 3: Test Signing -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 3: Test PKP Signing"
            android:textColor="#BB86FC"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnTestSign"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Sign Test Message"
            android:textAllCaps="false"
            android:backgroundTint="#CF6679"
            android:enabled="false"
            android:layout_marginBottom="24dp" />

        <!-- Logs -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logs"
            android:textColor="#BB86FC"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#0d0d1a"
            app:cardCornerRadius="8dp">

            <TextView
                android:id="@+id/tvLogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:padding="12dp"
                android:text="Ready to test...\n"
                android:textColor="#03DAC5"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:lineSpacingExtra="4dp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
